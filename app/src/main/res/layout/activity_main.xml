                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="八爪鱼" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="翻译文案" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="下载app" />

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/layout_clear" />
</FrameLayout>